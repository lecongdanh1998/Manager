                android:gravity="center_vertical"
                android:id="@+id/ext_meta_descriptionMoPhong_editDetails"
                android:lines="1"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/color_txtMoPhong"
                android:textColorHint="@color/color_extHintGray"
                android:textSize="@dimen/dimens_textsize"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_heightEditText" />
            <EditText
                android:layout_below="@id/ext_meta_descriptionMoPhong_editDetails"
                android:layout_marginLeft="@dimen/dimens_margin"
