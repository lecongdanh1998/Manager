                android:layout_below="@id/ext_meta_keywordsMoPhong_editDetails"
                android:layout_marginLeft="@dimen/dimens_margin"
                android:layout_marginRight="@dimen/dimens_margin"
                android:id="@+id/ext_meta_keywords_editDetails"
                android:lines="1"
                android:textCursorDrawable="@null"
                android:drawablePadding="10dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/color_extHintGray"
