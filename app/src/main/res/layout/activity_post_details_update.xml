                android:textColorHint="@color/color_extHintGray"
                android:textSize="@dimen/dimens_textsize"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_heightEditText" />
            <EditText
                android:layout_below="@id/ext_contentMoPhong_editDetails"
                android:layout_marginLeft="@dimen/dimens_margin"
                android:layout_marginRight="@dimen/dimens_margin"
                android:id="@+id/ext_content_editDetails"
