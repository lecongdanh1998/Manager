                android:layout_below="@+id/ext_excerpt_editDetails"
                android:layout_marginLeft="@dimen/dimens_margin"
                android:text="Category Id"
                android:gravity="center_vertical"
                android:id="@+id/ext_category_editDetails"
                android:lines="1"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/color_txtMoPhong"
                android:textColorHint="@color/color_extHintGray"
                android:textSize="@dimen/dimens_textsize"
                android:inputType="text"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimens_heightEditText" />
            <Spinner
                android:layout_toRightOf="@id/ext_category_editDetails"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="@dimen/dimens_margin"
                android:layout_marginRight="@dimen/dimens_margin"
                android:layout_below="@+id/ext_excerpt_editDetails"
                android:id="@+id/Spinner_category_editDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>
            <TextView
                android:layout_below="@+id/ext_category_editDetails"
                android:layout_marginLeft="@dimen/dimens_margin"
                android:text="Author_id"
                android:gravity="center_vertical"
                android:id="@+id/ext_author_idMoPhong_editDetails"
                android:lines="1"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/color_txtMoPhong"
                android:textColorHint="@color/color_extHintGray"
                android:textSize="@dimen/dimens_textsize"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_heightEditText" />
