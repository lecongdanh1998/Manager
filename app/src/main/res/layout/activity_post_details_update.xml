                android:drawableLeft="@drawable/ic_subtitles_black_24dp"
                android:background="@drawable/ext_custombackground"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_heightEditText" />
            <TextView
                android:layout_below="@+id/ext_meta_keywords_editDetails"
                android:layout_marginLeft="@dimen/dimens_margin"
                android:text="Content"
                android:gravity="center_vertical"
                android:id="@+id/ext_contentMoPhong_editDetails"
                android:lines="1"
                android:textStyle="bold"
                android:layout_gravity="center"
