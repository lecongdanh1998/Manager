            </RelativeLayout>
            <TextView
                android:layout_marginTop="@dimen/dimens_margin"
                android:layout_below="@+id/RLTLAYOUT"
                android:layout_marginLeft="@dimen/dimens_margin"
                android:text="Id"
                android:gravity="center_vertical"
                android:id="@+id/ext_idMoPhong_editDetails"
                android:lines="1"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/color_txtMoPhong"
                android:textColorHint="@color/color_extHintGray"
                android:textSize="@dimen/dimens_textsize"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_heightEditText" />
            <TextView
                android:layout_below="@+id/ext_idMoPhong_editDetails"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimens_margin"
                android:layout_marginRight="@dimen/dimens_margin"
                android:id="@+id/ext_id_editDetails"
                android:lines="1"
                android:textCursorDrawable="@null"
                android:drawablePadding="10dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/color_extHintGray"
                android:textColorHint="@color/color_extHintGray"
                android:textSize="@dimen/dimens_textsize"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:drawableLeft="@drawable/ic_subtitles_black_24dp"
                android:background="@drawable/ext_custombackground"
