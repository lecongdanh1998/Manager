<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Contact.ContactDetails.ContactDetails">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimens_padding"
        android:background="@color/colorRed"
        android:padding="@dimen/margin_5dp"
        app:cardCornerRadius="@dimen/margin_5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimens_padding">

            <TextView
                android:id="@+id/txt_title_contact_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Giao dien he thong"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textLager" />

            <TextView
                android:id="@+id/txt_content_contact_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_title_contact_detail"
                android:layout_marginTop="@dimen/margin_5dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Rất đẹp"
                android:textSize="@dimen/textMedium" />

            <TextView
                android:id="@+id/txt_email_contact_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_content_contact_detail"
                android:layout_marginTop="@dimen/margin_5dp"
                android:fontFamily="@font/roboto_regular"
                android:text="s@gmail.com - "
                android:textSize="@dimen/textSmall" />

            <TextView
                android:id="@+id/txt_phone_contact_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_content_contact_detail"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_toRightOf="@id/txt_email_contact_detail"
                android:fontFamily="@font/roboto_regular"
                android:text="012345"
                android:textSize="@dimen/textSmall" />

            <TextView
                android:id="@+id/txt_dateTime_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_content_contact_detail"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/margin_5dp"
                android:fontFamily="@font/roboto_regular"
                android:text="20:00"
                android:textSize="@dimen/textSmall" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</ScrollView>